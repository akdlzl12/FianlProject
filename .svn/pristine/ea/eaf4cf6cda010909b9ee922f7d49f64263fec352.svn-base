<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="/WEB-INF/views/common/taglibs.jsp"%>
<html>
<head>
<title>Home</title>
<style>
div.row{
	margin: 10px; padding: 10px;
}

.margin-right {
	margin-right: 16px;
}
</style>
<%@ include file="/WEB-INF/views/common/head.jsp"%>
</head>
<body>
	<c:set var="nav_active" value="financial" />

	<%@ include file="/WEB-INF/views/common/nav.jsp"%>
	<div class="row">
		<div class="col-md-2 div-side">
			<c:set var="side_active" value="calculate" />
			<%@ include file="/WEB-INF/views/financial/sidebar/sideBar.jsp"%>
		</div>
		<div class="col-md-10">
			<div class="container" style="margin-top: 50px;">
				<h2 class="page-header">일일 정산</h2>
				<div class="row box">
					<div class="col-sm-4">
						<label class="margin-right">날짜</label>
						<input type="date" class= "form-control" id="date"/>
					</div>
					<div class="col-sm-4">
						<label class="margin-right">단말기 번호</label> 
						<select class="form-control" name="posNo" id="posNo">
							<option>미선택</option>
						</select>
					</div>
					<div class="col-sm-4">
						<label class="margin-right">판매자</label> 
						<select class="form-control" name="employee" id="employee">
							<option>미선택</option>
						</select>
					</div>
				</div>
				<div class="row">
				<form action="searchDaycalculate.esc" method="post">
					<table class="table">
						<tr>
							<th>기본금</th>
							<td>
								<h4>200000</h4>
							</td>
			
						</tr>
						<tr>
							<th>총 결제금액</th>
							<td>
								<h4 class="totalPrice">0</h4>
							</td>
							
						</tr>
						<tr>
							<th>반환금</th>
							<td>
								<input type="number" id="return" value=""/>
							</td>
							
						</tr>
						<tr>
							<th>정산차</th>
							<td>
								<h4 class="minus">0</h4>
							</td>
						</tr>
					</table>
					<div class="text-right">
						<button class="btn btn-primary">확인</button>
					</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>
<script type="text/javascript">
$(function(){
	
	// 날짜 선택
	$("#date").on("change", function(){
			
		var day = $("#date").val();
		
		$.ajax({
			type:"GET",
			url:"searchPosNo.esc",
			data:{
				date : day
				
			},
			dataType:"json",
			success:function(result){
				var html = "";
				html += "<option>선택</option>";
				$.each(result, function(index, item){
					html += "<option value='"+item.pid+"' name='"+item.pid+"'>"+item.pid+"</option>" 
					
				});
				$("#posNo").html(html);
			}
		})
	});
	// 포스기 선택
	$("#posNo").on("change", function(){
		var dates = $('#date').val();
		var num = $("#posNo").val();
		
		
		$.ajax({
			type:"GET",
			url:"searchSeller.esc",
			data:{
				date : dates
				
			},
			dataType:"json",
			success:function(result){
				
				var html = "";
				html += "<option>선택</option>";
				$.each(result, function(index, item){
					if(this.pos.pid == num){
					
					html += "<option value='"+item.employee.name+"'>"+item.employee.name+"</option>" 
					}
				});
				$("#employee").html(html);
			}
		})
	})
	
	// 리스트 출력
	$("#employee").on("change", function(){
		 var dates = $("#date").val();
		 var posNo = $("#posNo").val(); 
		 var employee = $("#employee").val();
		 
		$.ajax({
			type:"POST",
			url:"searchReceipts.esc",
			data:{
				name:employee,
				posName:posNo,
				time:dates
			},
			dataType:"json",
			success:function(result){
				var num = 0;
				$.each(result, function(index, item){
					
					num += item.price + item.discount;
					
				})
				
				$("h4.totalPrice").text(num);
			}
		})
	})
	
	// 정산
	$("#return").on("change", function(){
		
		if ($("h4.totalPrice").text() != 0) {

				var dates = $("#date").val();
				var posNo = $("#posNo").val();
				var employee = $("#employee").val();
				var returns = $("#return").val();

				$.ajax({
					type : "POST",
					url : "searchReceipts.esc",
					data : {
						name : employee,
						posName : posNo,
						time : dates
					},
					dataType : "json",
					success : function(result) {
						var num = 0;
						$.each(result, function(index, item) {

							num += item.price + item.discount;

						})
						var minus = returns - num;

						$("h4.minus").text(minus);

					}
				})
			} else {
				alert ("선택해주세요");
			}
		})
	})
</script>
</html>